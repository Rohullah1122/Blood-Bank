<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.user_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/profileimg"
        android:background="@drawable/windowsimg">



        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/userimage1"
            android:layout_width="215dp"
            android:layout_height="282dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:src="@drawable/profile" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp">

            <EditText
                android:id="@+id/txtnamee"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:inputType="textPersonName"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/raduise_buttons"
                android:drawableStart="@drawable/ic_phone"
                android:gravity="center"
                android:hint="Enter your Name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                />






            <EditText
                android:id="@+id/ptxtphone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:inputType="phone"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/raduise_buttons"
                android:drawableStart="@drawable/ic_phone"
                android:gravity="center"
                android:hint="Enter your Phone"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                />


            <EditText
                android:id="@+id/ptxtlocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:inputType="textPersonName"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/raduise_buttons"
                android:drawableStart="@drawable/ic_phone"
                android:gravity="center"
                android:hint="Enter your Location"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                />


            <Spinner
                android:id="@+id/spinner_khon2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/raduise_buttons"
                />



            <Button
                android:id="@+id/btn_update"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="168dp"
                android:background="@drawable/raduise_buttons"
                android:backgroundTint="@color/lighred"
                android:gravity="center"
                android:text="ترکیب اکوند"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />


        </LinearLayout>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>